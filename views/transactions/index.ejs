<div class="panel-header panel-header-sm"></div>
<div class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header d-sm-flex justify-content-between align-items-center">
          <h4 class="card-title"><%= title %> </h4>
          <a href="/transaction/create" class="btn btn-primary"><i class="fas fa fa-plus"></i></a>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table id="table_id" class="table">
              <thead class="text-primary">
                <th>#</th>
                <th>Date</th>
                <th>Invoice</th>
                <th>Email</th>
                <th>City</th>
                <th>Status</th>
                <th>Total</th>
                <th>Action</th>
              </thead>
              <tbody>
                  <% transactions.forEach((transaction, index) => { %>
                    <tr>
                      <th><%= index + 1 %> </th>
                      <td><%= transaction.date.toISOString().split('T')[0] %> </td>
                      <td><%= transaction.invoice %> </td>
                      <td><%= transaction.customer.email %> </td>
                      <td><%= transaction.customer.city %> </td>
                      <td><%= transaction.status %> </td>
                      <td><%= util.number_format(transaction.total) %> </td>
                      <td>
                        <!-- <a href="/transaction/show/<%= transaction._id %>" class="alert-info" title="Show"><i class="fas fa fa-eye fa-lg mx-1"></i></a> -->
                        <!-- <a href="/transaction/edit/<%= transaction._id %>" class="alert-success" title="Edit"><i class="fas fa fa-edit fa-lg mx-1"></i></a> -->
                        <a href="/transaction/delete/<%= transaction._id %>" class="alert-danger" onclick="return confirm('Are you sure want to delete this transaction?')" title="Delete"><i class="fas fa fa-trash fa-lg mx-1"></i></a>
                      </td>
                    </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
