<div class="panel-header panel-header-sm"></div>
<div class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header d-sm-flex justify-content-between align-items-center">
          <h4 class="card-title"><%= title %> </h4>
          <a href="/product/create" class="btn btn-primary"><i class="fas fa fa-plus"></i> Add new product</a>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table id="table_id" class="table">
              <thead class="text-primary">
                <th>#</th>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Status</th>
                <th>Action</th>
              </thead>
              <tbody>
                  <% products.forEach((product, index) => { %>
                    <tr>
                      <th scope="row"><%= index + 1 %> </th>
                      <td><img src="/images/uploads/product/<%= product.image %> " width="50" alt="product image"></td>
                      <td><%= product.name %> </td>
                      <td><%= product.subtitle %> </td>
                      <td><%= product.price %> </td>
                      <td><%= product.status === true ? 'Enable' : 'Disable' %>  </td>
                      <td>
                        <a href="/product/publish/<%= product._id %>/<%= !product.status %>" class="alert-info" onclick="return confirm('Are you sure want to publish this product?')"><i class="fas fa fa-upload fa-lg mx-1"></i></a>
                        <a href="/product/edit/<%= product._id %>" class="alert-success"><i class="fas fa fa-edit fa-lg mx-1"></i></a>
                        <a href="/product/delete/<%= product._id %>" class="alert-danger" onclick="return confirm('Are you sure want to delete this product?')"><i class="fas fa fa-trash fa-lg mx-1"></i></a>
                      </td>
                    </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
