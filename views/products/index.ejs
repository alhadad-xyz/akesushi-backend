<%- include("../partials/header") %> 

<div class="container">
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <div class="card mt-5">
        <div class="card-header d-flex justify-content-between align-items-center">
          List Product
          <a href="/product/create" class="btn btn-primary">Add New Product</a>
        </div>
        <div class="card-body">
          <% if (message) { %>
          <div class="alert alert-<%= message.type %> alert-dismissible fade show" role="alert">
            <%= message.message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
          <% } %>
          <div class="table-responsive">
            <table id="table_id" class="table table-striped display my-3">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Image</th>
                  <th scope="col">Name</th>
                  <th scope="col">Subtitle</th>
                  <th scope="col">Price</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                  <% products.forEach((product, index) => { %>
                    <tr>
                      <th scope="row"><%= index + 1 %> </th>
                      <td><img src="/images/uploads/product/<%= product.image %> " width="50" alt="product image"></td>
                      <td><%= product.name %> </td>
                      <td><%= product.subtitle %> </td>
                      <td><%= product.price %> </td>
                      <td>
                        <a href="/product/edit/<%= product._id %>" class="text-primary"><i class="fas fa fa-edit fa-lg mx-1"></i></a>
                        <a href="/product/delete/<%= product._id %>" class="text-danger"><i class="fas fa fa-trash fa-lg mx-1"></i></a>
                      </td>
                    </tr>
                  <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %> 